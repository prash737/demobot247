modules = ["nodejs-20", "web"]
run = "npm run dev"

[nix]
channel = "stable-24_05"

[deployment]
build = ["sh", "-c", "npm run build"]
deploymentTarget = "gce"
run = ["sh", "-c", "node server.js"]

[[deployment.rewrites]]
from = "/*"
to = "/index.html"

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 3001
externalPort = 3001

[workflows]
runButton = "Dev Server"

[[workflows.workflow]]
name = "Dev Server"
author = 37308151
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pnpm run dev"
